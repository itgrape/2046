FROM ohpc-container/openhpc:3
LABEL maintainer="pushihao@njust.edu.cn"

ENV http_proxy='http://10.10.11.82:9500'
ENV https_proxy='http://10.10.11.82:9500'
RUN export https_proxy=http://10.10.11.82:9500 http_proxy=http://10.10.11.82:9500 all_proxy=socks5://10.10.11.82:9501

# Base install
RUN curl -fsSL https://github.com/saltstack/salt-install-guide/releases/latest/download/salt.repo | sudo tee /etc/yum.repos.d/salt.repo && \
    dnf install -y ohpc-slurm-server \
                   inotify-tools salt-master && \
    dnf clean all

# Salt sync config
RUN mkdir -p /srv/salt/auth_files /var/log/slurm
COPY sync_auth_files.sls /srv/salt/sync_auth_files.sls

# Copy configuration
COPY slurm.conf slurmdbd.conf cgroup.conf gres.conf /etc/slurm/
COPY sshd_config /etc/ssh/sshd_config
COPY monitor_user.sh mail_wrapper.sh /usr/local/bin/

# File permissions
RUN chown slurm:slurm /etc/slurm/slurmdbd.conf && chmod 600 /etc/slurm/slurmdbd.conf && \
    touch /var/log/slurmdbd.log && \
    touch /var/log/slurmctld.log && chown slurm:slurm /var/log/slurmctld.log && chmod 640 /var/log/slurmctld.log && \
    touch /var/log/munge/munged.log && chown -R munge:munge /var/log/munge && chmod 640 /var/log/munge/munged.log && \
    chown slurm:slurm /var/spool/clientmqueue/ && chmod 750 /var/spool/clientmqueue/ && \
    touch /var/log/slurm/sendmail.log && \
    chmod +x /usr/local/bin/monitor_user.sh /usr/local/bin/mail_wrapper.sh

# Set root password
RUN echo 'root:root' | chpasswd

# Delete nologin file
RUN echo "rm -f /var/run/nologin" >> /etc/rc.local && \
    chmod +x /etc/rc.local

RUN sudo chown slurm:mail /var/spool/clientmqueue/ && sudo chown slurm:smmsp /var/spool/clientmqueue/ && chmod 770 /var/spool/clientmqueue/

# Enable service
COPY slurmctld_override.conf /etc/systemd/system/slurmctld.service.d/override.conf
COPY monitor-user.service /etc/systemd/system/monitor-user.service
RUN systemctl enable munge slurmdbd slurmctld sshd monitor-user salt-master postfix

# Use systemd
CMD ["/usr/sbin/init"]
